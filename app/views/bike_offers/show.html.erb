<h1>Bike details</h1>


<h3> <%= @bike_offer.title %> </h3>

<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item active">
      <%= cl_image_tag @bike_offer.photos.first.key, height: 400, width: 500, crop: :fill, class: 'd-block w-100' %>
    </div>
      <% @bike_offer.photos[1..].each do |photo| %>
      <div class="carousel-item">
        <%= cl_image_tag photo.key, height: 400, width: 500, crop: :fill, class: 'd-block w-100' %>
      </div>
    <% end %>


  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span></a>
  </div>
</div>

<p>Genre : <%= @bike_offer.genre %></p>
<p>Size : <%= @bike_offer.size %></p>
<p>Price : <%= @bike_offer.price_per_day %>EUR</p>

<% if policy(@bike_offer).edit? %>
    <%=link_to "Update this bike", edit_bike_offer_path(@bike_offer) %>
    <%=link_to "Delete this bike", bike_offer_path(@bike_offer), method: :delete, data: {confirm: "Are your sure?"} %>
<% end %>



<%=link_to "See all bike offers", bike_offers_path %>
<%=link_to "Create a new offer", new_bike_offer_path %>

