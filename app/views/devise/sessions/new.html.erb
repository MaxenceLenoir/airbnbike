<div class="row login-card">
  <div class="col-sm-6 col-lg-4 offset-sm-3 offset-lg-4">

<span class="no-booking-requests">Find the bike you deserve :</span>
<h3 style="margin-bottom: 30px;">Log in !</h3>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :pseudo,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "pseudo" }%>
        <%= f.input :password,
                    required: true,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Log in", class: "button-airbnbike mb-5" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>

  </div>
</div>
