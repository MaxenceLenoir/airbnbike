<nav class="navbar navbar-expand-lg navbar-dark bg-primary">

  <div class="container">


    <%= link_to "Airbnbike", root_path, class: 'navbar-brand' %>

    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>


    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item">
          <%= link_to "All bikes", root_path , class: "nav-link"%>
        </li>
        <li class="nav-item">
          <%= link_to "My offers", all_my_bikes_path, class: "nav-link"%>
        </li>
        <li class="nav-item">
          <%= link_to "My bookings", all_my_bookings_path, class: "nav-link"%>
        </li>
        <li class="nav-item">
          <%= link_to "Create offer", new_bike_offer_path, class: "nav-link"%>
        </li>
      </ul>

      <div class="nav-item dropdown">
        <% if (current_user.nil? || current_user.photo.attachment.nil?) %> 
          <%= image_tag('default-avatar.png', class: 'avatar dropdown-toggle', id: 'navbarDropdown', data: { toggle: 'dropdown' }, aria: { haspopup: true, expanded: false } ) %>
        <% else %> 
          <%= cl_image_tag current_user.photo.key, class: 'avatar-large dropdown-toggle', id: 'navbarDropdown', data: { toggle: 'dropdown' }, aria: { haspopup: true, expanded: false } %>
        <% end %>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <% unless current_user.nil? %>
            <%= link_to "My Profile", user_path(current_user), class: "dropdown-item"%>
            <%= link_to "Log out", destroy_user_session_path, class: "dropdown-item"%>
          <% end %>
          <% if current_user.nil? %>
            <%= link_to "Log in", new_user_session_path, class: "dropdown-item"%>
            <%= link_to "Sign up", new_user_registration_path, class: "dropdown-item"%>
          <% end %>
        </div>
      </div>
   </div>
  </div>
</nav>
