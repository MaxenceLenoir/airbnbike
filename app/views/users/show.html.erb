<div class="container margintb30 footer-small">

    <div class="row">

            <% if (@user.nil? || @user.photo.attachment.nil?) %>
            <%= image_tag('default-avatar.png', width: 200, height: 200, crop:"fill"  ) %>
            <% else %>
            <%= cl_image_tag @user.photo.key, width: 200, height: 200, crop:"fill" %>
            <% end %>

            <div class="pl-5">
                <h1>Your profile</h1>
                <h5>Pseudo : <%= @user.pseudo %></h5>
                <h5>Email : <%= @user.email %></h5>
                <% if current_user == @user %>
                    <%= render 'form', user: @user %>
                <% end %>
            </div>

    </div>
</div>




